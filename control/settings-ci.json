    {
      "type": "bool",
      "keyPath": "Policy.DisableSettingsEditing",
      "name": "禁止编辑应用设置",
      "description": "禁止编辑应用设置",
      "icon": "bi-gear-wide-connected",
      "default": false
    },
    {
      "type": "bool",
      "keyPath": "Policy.DisableSplashCustomize",
      "name": "禁止自定义启动加载界面",
      "description": "禁止自定义启动加载界面",
      "icon": "bi-window-dock",
      "default": false
