      "eng_name": "Policy",
      "icon": "bi-lock",
      "settings": [
        "Policy.DisableProfileClassPlanEditing",
        "Policy.DisableProfileTimeLayoutEditing",
        "Policy.DisableProfileSubjectsEditing",
        "Policy.DisableProfileEditing",
        "Policy.DisableSettingsEditing",
        "Policy.DisableSplashCustomize",
        "Policy.DisableDebugMenu",
        "Policy.AllowExitManagement"
      ]
    },
    {
      "name": "常规设置",
      "eng_name": "basic",
      "icon": "bi-gear-wide-connected",
      "settings": [
        "settings.SelectedProfile",
        "settings.IsMainWindowVisible",
        "settings.IsWelcomeWindowShowed"
      ]
    },
    {
      "name": "通知设置",
      "eng_name": "not",
      "icon": "bi-bell",
