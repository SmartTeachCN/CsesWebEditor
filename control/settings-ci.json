      "icon": "bi-type-bold",
      "default": "/ClassIsland;component/Assets/Fonts/#HarmonyOS Sans SC",
      "placeholder": "请输入字体路径"
    },
    {
      "type": "number",
      "keyPath": "settings.MainWindowBodyFontSize",
      "name": "正文字体大小",
      "description": "设置正文的字体大小",
      "icon": "bi-fonts",
      "default": 16,
      "min": 10,
      "max": 32,
      "step": 1,
      "validation": {
        "required": true
      }
    },
    {
      "type": "number",
      "keyPath": "settings.MainWindowEmphasizedFontSize",
      "name": "强调字体大小",
      "description": "设置强调文本的字体大小",
      "icon": "bi-fonts",
      "default": 18,
      "min": 12,
      "max": 32,
      "step": 1,
      "validation": {
        "required": true
      }
    },
    {
      "type": "select",
      "keyPath": "settings.HideMode",
      "name": "隐藏模式",
      "description": "选择隐藏窗口的模式",
      "icon": "bi-eye-slash",
      "default": 0,
      "options": [
        {
          "value": 0,
          "label": "不隐藏"
        },
        {
          "value": 1,
          "label": "隐藏到托盘"
        }
      ]
    },
    {
      "type": "bool",
      "keyPath": "settings.HideOnFullscreen",
      "name": "全屏时隐藏",
      "description": "是否在全屏时隐藏窗口",
      "icon": "bi-fullscreen",
      "default": false
    },
    {
      "type": "text",
      "keyPath": "settings.ExcludedFullscreenWindow",
      "name": "排除全屏窗口",
      "description": "输入需要排除的全屏窗口名称（逗号分隔）",
      "icon": "bi-window-minus",
      "default": "explorer",
      "placeholder": "请输入窗口名称"
    },
    {
      "type": "select",
      "keyPath": "settings.UpdateMode",
      "name": "更新模式",
      "description": "选择更新模式",
      "icon": "bi-cloud-arrow-down",
      "default": 3,
      "options": [
        {
          "value": 0,
          "label": "手动更新"
        },
        {
          "value": 1,
          "label": "自动下载更新"
        },
        {
          "value": 2,
          "label": "自动安装更新"
        },
        {
          "value": 3,
          "label": "自动安装更新并重启"
        }
      ]
    },
    {
      "type": "html",
      "keyPath": "settings.LastCheckUpdateTime",
      "name": "上次检查更新时间",
      "description": "上次检查更新的时间",
      "icon": "bi-clock",
      "default": "2025-02-15T12:32:32.4151199+08:00"
    },
    {
      "type": "bool",
      "keyPath": "settings.AutoInstallUpdateNextStartup",
      "name": "下次启动时自动安装更新",
      "description": "是否在下次启动时自动安装更新",
      "icon": "bi-cloud-download",
      "default": true
