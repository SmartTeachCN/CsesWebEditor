    {
      "type": "bool",
      "keyPath": "Policy.DisableProfileClassPlanEditing",
      "name": "禁止编辑课表",
      "description": "禁止编辑课表",
      "icon": "bi-calendar-x",
      "default": false
    },
    {
      "type": "bool",
      "keyPath": "Policy.DisableProfileTimeLayoutEditing",
      "name": "禁止编辑时间表",
      "description": "禁止编辑时间表",
      "icon": "bi-clock-history",
      "default": false
    },
    {
      "type": "bool",
      "keyPath": "Policy.DisableProfileSubjectsEditing",
      "name": "禁止编辑科目",
