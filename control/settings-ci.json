        "settings.ClassPrepareNotifySeconds",
        "settings.IsClassPrepareNotificationEnabled",
        "settings.IsClassChangingNotificationEnabled",
        "settings.IsClassOffNotificationEnabled"
      ]
    },
    {
      "name": "外观与布局",
      "eng_name": "ui",
      "icon": "bi-palette",
      "settings": [
        "settings.Theme",
        "settings.MainWindowFont",
        "settings.MainWindowBodyFontSize",
        "settings.MainWindowEmphasizedFontSize"
      ]
    },
    {
      "name": "高级选项",
      "eng_name": "adv",
      "icon": "bi-cpu",
      "settings": [
        "settings.HideMode",
        "settings.HiedRules",
        "settings.HideOnFullscreen",
        "settings.ExcludedFullscreenWindow"
      ]
    },
    {
      "name": "更新与维护",
      "eng_name": "update",
      "icon": "bi-cloud-arrow-down",
      "settings": [
        "settings.UpdateMode",
        "settings.LastCheckUpdateTime",
        "settings.AutoInstallUpdateNextStartup"
      ]
    }
  ],
  "settings": [
    {
      "type": "select",
      "keyPath": "settings.SelectedProfile",
      "name": "选择配置文件",
      "description": "选择当前使用的配置文件",
      "icon": "bi-file-earmark-text",
      "default": "schedule.json",
      "options": [
        {
          "value": "schedule.json",
          "label": "默认配置"
        }
      ]
    },
    {
      "type": "bool",
      "keyPath": "settings.IsMainWindowVisible",
      "name": "主窗口可见",
      "description": "是否显示主窗口",
      "icon": "bi-window",
      "default": true
    },
    {
      "type": "bool",
      "keyPath": "settings.IsWelcomeWindowShowed",
      "name": "显示欢迎窗口",
      "description": "是否显示欢迎窗口",
      "icon": "bi-box-arrow-in-right",
      "default": true
    },
    {
      "type": "number",
      "keyPath": "settings.ClassPrepareNotifySeconds",
      "name": "课前通知时间",
      "description": "课前通知的时间（秒）",
      "icon": "bi-alarm",
      "default": 60,
      "min": 10,
      "max": 3600,
      "step": 10,
      "validation": {
        "required": true
      }
    },
    {
      "type": "bool",
      "keyPath": "settings.IsClassPrepareNotificationEnabled",
      "name": "启用课前通知",
      "description": "是否启用课前通知",
      "icon": "bi-bell",
      "default": true
    },
    {
      "type": "bool",
      "keyPath": "settings.IsClassChangingNotificationEnabled",
      "name": "启用换课通知",
      "description": "是否启用换课通知",
      "icon": "bi-bell",
      "default": true
    },
    {
      "type": "bool",
      "keyPath": "settings.IsClassOffNotificationEnabled",
      "name": "启用下课通知",
      "description": "是否启用下课通知",
      "icon": "bi-bell",
      "default": true
    },
    {
      "type": "select",
      "keyPath": "settings.Theme",
      "name": "主题",
      "description": "选择应用的主题",
      "icon": "bi-palette",
      "default": 2,
      "options": [
        {
          "value": 0,
          "label": "浅色主题"
        },
        {
          "value": 1,
          "label": "深色主题"
        },
        {
          "value": 2,
          "label": "系统默认"
        }
      ]
    },
    {
      "type": "text",
      "keyPath": "settings.MainWindowFont",
      "name": "主窗口字体",
